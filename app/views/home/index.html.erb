<div class= "container text-center">
  <div class= "row">
    <div class='col-xs-offset-1 col-xs-10' >

    <h3>Toute l'info en temps réel sur les files d'attente.</h3>

      <% Line.last(5).each do |line| %>

      <div class='queue'>
        <div class= "place"><%= line.place %>
          <div class="date">
            <%= line.date.strftime('%d-%m-%Y') %>
          </div>
        </div>
        <% unless line.event.nil? %>
          <ul class="list-inline">
            <li>Evènement : <%= line.event %></li>
          </ul>
          <% else %>
        <% end %>


          <% line.posts.last(3).each do |post| %>
        <div class='post'>
          à <%= post.created_at.hour %>h<%= post.created_at.min %>, le Queuer <%= post.user.first_name %> a indiqué : "<%= post.description %>"
          <%= link_to "Parler à ce queuer", new_post_comment_path(post) %>
        </div>
        <% end %>
        <div class='btn btn-default time-btn'>
          <%= link_to "Indiquer un temps d'attente", new_line_post_path(line) %>
        </div>

        <br>
      </div>

    <% end %>

    <div class="btn btn-default home">
      <%= link_to "Je crée une nouvelle file d'attente", new_line_path %>
    </div>

    <div class="btn btn-default home">
      <%= link_to "Voir toutes les files d'attente", lines_path %>
    </div>

    </div>
  </div>
</div>