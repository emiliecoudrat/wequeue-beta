<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
      <%= bootstrap_form_for(@line, class: 'form') do |f| %>

        <div class="field">
          <%= f.text_field :place %>
        </div>

        <div class="field">
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <%= f.text_field :city %>
        </div>

        <div class="field">
          <%= f.text_area :event %>
        </div>

        <div class="field">
          <%= f.date_field :date %>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>

      <% end %>
    </div>
  </div>
</div>