<div class="container">
  <h1>
  Les infos sur la file d'attente ayant lieu à <%= @line.place %> et l'événement <%= @line.event %> le <%= @line.date %>
  </h1>


  <% @line.posts.all.each do |post| %>
    <div>
      A <%= post.created_at %>,
      <%= post.user.first_name %> a écrit :
      <%= post.description %>
      <% if post.picture.exists? %>
        <%= image_tag post.picture.url(:thumb) %>
      <% end %>
      <%= link_to "Je pose une question au queuer", new_post_comment_path(@line, @post) %>
    </div>
  <% end %>

  <br>

  <div>
    <%= link_to "Je mets à jour le temps d'attente", new_line_post_path(@line) %>
  </div>
  <div>
    <%= link_to "Revenir aux files d'attente", lines_path %>
  </div>
  <div>
    <%= link_to "Page d'accueil", root_path %>
  </div>

</div>