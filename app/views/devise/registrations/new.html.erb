<div class="container">
  <div class="row">

    <h1 class="text-center">weQueue</h1>
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">

      <h4 class="text-center">L'info en temps réel sur toutes les files d'attente.</h4>

      <div class= "signin">

        <%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.text_field :first_name, autofocus: true, label: "Prénom" %>
          </div>

          <div class="field">
            <%= f.text_field :last_name, autofocus: true, label: "Nom" %>
          </div>

          <div class="field">
            <%= f.email_field :email, autofocus: true, value: 'name@example.com', label: "Email" %>
          </div>

          <div class="field">
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <br />
            <%= f.password_field :password, autocomplete: "off", label: "Mot de passe" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirmez votre mot de passe"  %>
          </div>

          <div class="actions text-center">
            <%= f.submit "Sign up" %>
          </div>
          <br/>
        <% end %>

        <div class= "text-center">
          <div class= "btn btn-default devise">
            <%= link_to 'Déjà inscrit?', new_user_session_path %>
          </div>

          <div class="btn btn-default" id= "fb">
            <%= link_to(user_omniauth_authorize_path(:facebook)) do %>
            Se connecter avec <i class="fa fa-facebook"></i>
          <% end %>
          </div>
        </div>

      </div>

    </div>
  </div>
</div>
