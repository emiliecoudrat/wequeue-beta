<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">

      <h2>Sign up</h2>

      <%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.text_field :first_name, autofocus: true, label: "PrÃ©nom" %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, autofocus: true, label: "Nom" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, value: 'name@example.com', label: "Email" %>
        </div>

        <div class="field">
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <br />
          <%= f.password_field :password, autocomplete: "off", label: "Mot de passe" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirmez votre mot de passe"  %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
        <br/>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
