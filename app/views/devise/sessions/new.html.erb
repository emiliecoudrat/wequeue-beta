<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">

      <h2>Log in</h2>

      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, label: "Email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", label: "Mot de passe" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
        <br />
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
