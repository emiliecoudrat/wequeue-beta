<div class="container">
  <h2 class="text-center">Votre profil de Queuer</h2>
  <div class="row">

    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4">
      <%= bootstrap_form_for(@user, url: profile_path) do |f| %>

        <div class="field">
          <%= f.text_field :first_name %>
        </div>

        <div class="field">
          <%= f.text_field :last_name %>
        </div>

        <div class="text-center"><%= f.submit "Update profile" %></div>
        <% end %>

    </div>

  </div>
</div>