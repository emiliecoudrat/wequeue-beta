<div class="container margin">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">

     <%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", label: "Votre nouveau mot de passe" %>
      </div><i>(Laissez le champ libre si vous ne souhaitez pas le changer.)</i>

      <br>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirmez votre nouveau mot de passe" %>
      </div>

      <br>

      <div class="field">
        <%= f.password_field :current_password, autocomplete: "off", label: "Votre mot de passe actuel" %><i>(Nous avons besoin de votre mot de passe actuel pour confirmer vos changements.)</i>
      </div>

      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>

    </div>
  </div>
</div>