<div class="container comment">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
      <%= bootstrap_form_for([@post, @comment], class: 'form') do |f| %>

        <div class="field">
          <%= f.text_area :content, label: "Posez votre question" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Je valide" %>
        </div>

        <% end %>

        <div class='text-center'>
          <div class="btn btn-default home">
            <%= link_to lines_path do %>
              <i class="fa fa-eye"></i> Voir toutes les files d'attente
            <% end %>
          </div>


          <div class="btn btn-default home">
            <%= link_to root_path do %>
            <i class="fa fa-home"></i>  Accueil
            <% end %>
          </div>
        </div>

    </div>
  </div>
</div>
